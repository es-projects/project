<%= form_with(model: group, local: true) do |form| %>
  <% if group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(group.errors.count, "error") %> prohibited this group from being saved:</h2>

      <ul>
        <% group.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label t(:student_1) %><br />
    <%= form.select :student_1_id, options_for_select(User.all.map{|s|[s.username, s.id]}) %>
  </div>

  <div class="field">
    <%= form.label t(:student_2) %><br />
    <%= form.select :student_2_id, options_for_select(User.all.map{|s|[s.username, s.id]}) %>
  </div>

  <div class="actions">
    <%= form.submit (form.object.new_record? ? t(:create_group) : t(:update_group)) %>
  </div>
<% end %>
