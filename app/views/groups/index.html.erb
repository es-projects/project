<p id="notice"><%= notice %></p>

<h1><%= t(:groups) %></h1>

<table>
  <thead>
    <tr>
      <th><%= t(:group_id) %></th>
      <th><%= t(:student_1) %></th>
      <th><%= t(:student_2) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.id %></td>
        <td><%= group.student_1.name unless group.student_1.nil? %></td>
        <td><%= group.student_2.name unless group.student_2.nil? %></td>
        <td><%= link_to t(:show), group %></td>
        <td><%= link_to t(:edit), edit_group_path(group) %></td>
        <td><%= link_to t(:destroy), group, method: :delete, data: { confirm: t(:confirmation) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

