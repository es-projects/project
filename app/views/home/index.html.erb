<div class="wrapper">
  <div class="page-header page-header-small">
    <div class="page-header-image" data-parallax="true" style="background-image: url('/images/ipt.jpg');">
    </div>
  </div>
</div>

<div class="container" style="margin-top:20px">
  <% if notice %>
    <div class="alert alert-primary" role="alert">
      <%= notice %>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-4">
      <div class="card">
        <div class="info text-center">
          <div class="icon">
            <i class="fas fa-briefcase fa-3x"></i>
          </div>
          <h4 class="info-title"><%= t(:projects) %></h4>
          <p class="description"><%= @projectsCount %></p>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card">
        <div class="info text-center">
          <div class="icon">
            <i class="fas fa-user fa-3x"></i>
          </div>
          <h4 class="info-title"><%= t(:users) %></h4>
          <p class="description"><%= @usersCount %></p>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card">
        <div class="info text-center">
          <div class="icon">
            <i class="fas fa-user-friends fa-3x"></i>
          </div>
          <h4 class="info-title"><%= t(:groups) %></h4>
          <p class="description"><%= @groupsCount %></p>
        </div>
      </div>
    </div>
</div>

<div class="container" style="margin-top:20px">
  <div class="row">
    <div class="col-md-8 ml-auto mr-auto text-center">
      <h2 class="title"><%= t(:projects) %></h2>
    </div>
  </div>
  <div class="row">
    <% @projects.each do |project| %>
      <div class="col-md-4">            
        <div class="card">
          <div class="info text-center">
            <h4 class="info-title"><%= project.project_name %></h4>
            <p class="description"><%= project.project_description %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>





