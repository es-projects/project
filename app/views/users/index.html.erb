<div class="section">
  <div class="container">
    <% if notice %>
    <div class="alert alert-primary" role="alert">
      <%= notice %>
    </div>
    <% end %>
    <p></p>

    <h1><%= t(:users) %></h1>
    <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th><%= t(:username) %></th>
          <th><%= t(:email) %></th>
          <th colspan="3"><%= t(:options) %></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.username %></td>
            <td><%= user.email %></td>
            <td><%= link_to t(:show), user %></td>
            <td><%= link_to t(:edit), edit_user_path(user) %></td>
            <td><%= link_to t(:destroy), user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
    <br>

    <%= link_to t(:new_user), new_user_path, :class => "btn btn-primary" %>
  </div>
</div>